    "version": "0.2.0",
    "configurations": [
        //launch Spike.AngularAspire.AppHost
        {
            "name": "Launch Spike.AngularAspire.AppHost",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Spike.AngularAspire.AppHost/bin/Debug/net9.0/Spike.AngularAspire.AppHost.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Spike.AngularAspire.AppHost",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bLogin to the dashboard at\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Spike.AngularAspire.AppHost/Views"
            }
        },
    ]
}